    }

    subgraph NaoBehaviours {
        label = "Package: Nao"
        // Example: Say Hello
        //          Say Goodbye
        //          Say Abort
    }

    subgraph OpenCV {
        label = "Package: OpenCV"
    }

    subgraph OCVAnalyze {
        label = "Package: OpenCV/Analyze"
        // Analyze found cube
    }

    subgraph OCVSearch {
        label = "Package: OpenCV/Search"
        // Search for cube
    }

    Main [
        label = "{Main|\l|+ main(void) : void\l}"
    ]

    Behaviour -> Main;
